{
    "version": 2,
    "builds": [
      {
        "src": "api/chat.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/chat.js" },
      { "src": "/(.*)", "dest": "/src/$1" }
    ]
  }
  